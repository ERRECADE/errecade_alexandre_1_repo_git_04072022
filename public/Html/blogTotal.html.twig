{% extends "base.html.twig" %}

{% block page %}
    <!-- Portfolio Grid-->
        <section class="page-section bg-light" id="portfolio">
            <div class="container">
                <div class="text-center">
                    <h2 class="section-heading text-uppercase">Portfolio</h2>
                    <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
                </div>
                <div class="row">
                    <div class="col-lg-4 col-sm-6 mb-4">
                {% for blog in blogs %}
                        <!-- Portfolio item 1-->
                        <div class="portfolio-item">
                            <a class="portfolio-link" data-bs-toggle="modal" href="#portfolioModal1">
                                <div class="portfolio-hover">
                                    <div class="portfolio-hover-content"><i class="fas fa-plus fa-3x"></i></div>
                                </div>
                                <div class="portfolio-caption">
                                    <div class="portfolio-caption-heading">{{blog.titre}}</div>
                                </div>
                            </a>
                            <div class="portfolio-caption">
                                <div class="portfolio-caption-subheading text-muted">{{blog.chapo}}</div>
                                <div class="portfolio-caption-subheading text-muted">{{blog.created_at}}</div>
                            </div>
                        </div>
                    </div>
                    <!-- Portfolio Modals-->
                    <!-- Portfolio item 1 modal popup-->
                    <div class="portfolio-modal modal fade" id="portfolioModal1" tabindex="-1" role="dialog" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="close-modal" data-bs-dismiss="modal"><img src="assets/img/close-icon.svg" alt="Close modal" /></div>
                                <div class="container">
                                    <div class="row justify-content-center">
                                        <div class="col-lg-8">
                                            <div class="modal-body">
                                                <!-- Project details-->
                                                <h2 class="text-uppercase">{{blog.titre}}</h2>
                                                <p class="item-intro text-muted">{{blog.nom}} , {{blog.prenom}}</p>
                                                <p>{{blog.texte}}</p>
                                                <ul class="list-inline">
                                                    <li>
                                                        <strong>date</strong>
                                                        {{blog.created_at}}
                                                    </li>
                                                </ul>
                                                </br>
                                                </br>
                                                </br>
                                                    <div class="text-center">
                                                        <h3 class="section-heading text-uppercase">{{blog.titreCom}}</h3>
                                                        <h4 class="section-subheading text-muted">{{blog.commentaire}}</h4>
                                                        <h5 class="section-subheading text-muted">{{blog.comDate}}</h5>
                                                    </div> 
                                                <form action="index.php?controller=Blog&action=blog" method="POST">
                                                    <fieldset>
                                                        <legend>Laissez un commentaire :</legend>

                                                        <div class="mb-3">
                                                            <label for="nom" class="form-label">Votre nom : </label>
                                                            <input type="text" id="nom" class="form-control" name="nom" placeholder="nom">
                                                        </div>
                                                        <div class="mb-3">
                                                            <label for="commentaire" class="form-label">Votre commentaire</label>
                                                            <textarea class="form-control" id="commentaire" name="commentaire" rows="3"></textarea>
                                                        </div>
                                                        <param class="form-check-label" for="blogId" id="blogId" name="blogId" value={{blog.id}}>{{blog.id}}</param> </br>
                                                        <button type="submit" class="btn btn-primary">envoyer</button>
                                                    </fieldset>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
                </div>
            </div>
        </section>
{% endblock %}