{% extends "base.html.twig" %}

{% block page %}
    <!-- Portfolio Grid-->
        <section class="page-section bg-light" id="portfolio">
            <div class="container">
                <div class="text-center">
                    <h2 class="section-heading text-uppercase">Portfolio</h2>
                    <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
                </div>
                <div class="row">
                {% for blog in blogs %}
                 <div class="col-lg-4 col-sm-6 mb-4">
                        <!-- Portfolio item 1-->
                        <div class="portfolio-item">
                            <a class="portfolio-link"  href="/blog/modal/{{blog.id}}">
                            {# <a class="portfolio-link"  href=""> pas encore faire la regex #}
                                <div class="portfolio-hover">
                                    <div class="portfolio-hover-content"><i class="fas fa-plus fa-3x"></i></div>
                                </div>
                                <div class="portfolio-caption">
                                    <div class="portfolio-caption-heading">{{blog.titre}}</div>
                                </div>
                            </a>
                            <div class="portfolio-caption">
                                <div class="portfolio-caption-subheading text-muted">{{blog.chapo}}</div>
                                <div class="portfolio-caption-subheading text-muted">{{blog.created_at|date("d/m/Y")}}</div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
                </div>
            </div>
        </section>
{% endblock %}